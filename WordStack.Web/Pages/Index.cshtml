@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Let's build some sentences!</p>

    <hr />
    <h2>Sentences</h2>

</div>
<div>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <tbody>
            @foreach (var item in Model.Sentences)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StringValue)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
